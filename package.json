{
  "name": "lumina",
  "private": true,
  "version": "0.1.0",
  "description": "AI Virtual Companion with Live2D and LLM integration",
  "author": "CheshireMew",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "verify-build": "python scripts/verify_build.py",
    "gen-types": "powershell scripts/generate_api_client.ps1",
    "build": "npm run verify-build && tsc && vite build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint ."
  },
  "dependencies": {
    "@langchain/community": "^1.1.1",
    "@langchain/core": "^1.1.8",
    "@langchain/openai": "^1.2.0",
    "@mediapipe/camera_utils": "^0.3.1675466862",
    "@mediapipe/drawing_utils": "^0.3.1675466124",
    "@mediapipe/face_mesh": "^0.4.1633559619",
    "@pixiv/three-vrm": "^3.4.5",
    "@react-three/drei": "^9.122.0",
    "@react-three/fiber": "^8.18.0",
    "axios": "^1.13.2",
    "electron-store": "^8.2.0",
    "eventemitter3": "^5.0.1",
    "lucide-react": "^0.562.0",
    "pixi-live2d-display": "^0.4.0",
    "pixi.js": "^6.5.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-electron": "^0.28.0",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "build": {
    "appId": "com.cheshiremew.lumina",
    "productName": "Lumina",
    "asar": true,
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "!python_backend/**/*",
      "!models/**/*",
      "!GPT-SoVITS/**/*",
      "!release/**/*",
      "!dist_backend/**/*",
      "!**/*.md",
      "!**/*.log"
    ],
    "directories": {
      "output": "release/${version}"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    },
    "extraResources": [
      {
        "from": "dist_backend/lumina_backend",
        "to": "bin/lumina_backend"
      },
      {
        "from": "python_backend/bin/surreal.exe",
        "to": "bin/surreal.exe"
      },
      {
        "from": "GPT-SoVITS/runtime/ffmpeg.exe",
        "to": "bin/ffmpeg.exe"
      },
      {
        "from": "public/live2d/hiyori_pro",
        "to": "bin/lumina_backend/live2d/hiyori_pro"
      }
    ]
  }
}
